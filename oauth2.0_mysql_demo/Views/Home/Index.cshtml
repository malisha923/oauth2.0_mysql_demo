<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>oauth2.0 demo</title>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery/jquery-2.1.4.min.js"></script>
</head>
<body>
    <div style="width:100%; height:500px;">
        <ul>
            <li style="width:40%; float:left;"><b>Id</b></li>
            <li style="width:20%; float:left;"><b>姓名</b></li>
            <li style="width:20%; float:left;"><b>邮箱</b></li>
            <li style="width:20%; float:left;"><b>电话</b></li>
        </ul>
        <span id="userlist"></span>
    </div>
</body>
</html>



<script type="text/javascript">

    // 获取用户列表
    function getUserList() {
        $.ajax({
            type: "GET",
            url: '/api/user',
            dataType: 'json',
            success: function (data) {
                var lists = data.Result;
                var temp = "";
                for (var i = 0; i < lists.length; i++) {
                    temp += "<ul>";
                    temp += "<li style='width:40%; float:left;'>" + lists[i].Id + "</li>";
                    temp += "<li style='width:20%; float:left;'>" + lists[i].RealName + "</li>";
                    temp += "<li style='width:20%; float:left;'>" + lists[i].Email + "</li>";
                    temp += "<li style='width:20%; float:left;'>" + lists[i].PhoneNumber + "</li>";
                    temp += "</ul>";
                }
                $("#userlist").empty();
                $("#userlist").append(temp);
            },
            complete: function (XMLHttpRequest, textStatus) {
                this; // 调用本次AJAX请求时传递的options参数
            }
        });
    }

    getUserList();

</script>

<style type="text/css">
    ul li {
        list-style: none;
        height: 30px;
    }
</style>